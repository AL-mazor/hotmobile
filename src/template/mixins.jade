//- Simple price package
mixin price-simple(name1, name2, price, texts)
	.swiper-slide.price-package.price-package-simple.btn-pop-up.wow.fadeInUp
		h3.price-package--name
			span= name1
			span.name= name2
		//-p.price-package--term= term
		.price-package--price.price
				span.price--amount= price
				span.price--currency ₪/мес	
			
		ul.price-package--feature
			each text in texts
				li= text
		
		.btn.btn-blue.btn-sm Подключиться

