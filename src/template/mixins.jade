mixin feedback(text, photo, name, profession, city)
	.swiper-slide.feedback
		p.feedback--text= text
		.feedback--info
			.feedback--photo(style="background-image: url(img/#{photo});")
			.feedback--desc
				.feedback--name= name
				p= profession
				p= city
