//- Offer
mixin offer(title, text, img)
	.offer.info-block
		img(src="img/#{img}.png")
		h2.offer--title.info-block--title= title
		p.info-block--desc= text
mixin offer1(title, text, img)
	.offer.info-block.wow.fadeInUp
		img(src="img/#{img}.png")
		h2.offer--title.info-block--title= title
		p.info-block--desc= text
mixin offer2(title, text, img)
	.offer.info-block.wow.fadeInUp(data-wow-delay="0.1s")
		img(src="img/#{img}.png")
		h2.offer--title.info-block--title= title
		p.info-block--desc= text
